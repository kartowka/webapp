{
  "compilerOptions": {
    "module": "es6",
    "esModuleInterop": true,
    "target": "es2022",
    "noImplicitAny": true,
    "types": [
      "node",
      "jest"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "coverage",
    "**/tests"
  ]
}